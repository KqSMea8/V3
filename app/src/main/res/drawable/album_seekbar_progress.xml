<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--定义seekbar滑动条的底色-->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:endColor="@color/swipemenulistview_default"
                android:startColor="@color/swipemenulistview_default" />
        </shape>
    </item>
    <!--定义seekbar滑动条进度颜色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/topic_color"/>
            </shape>
        </clip>
    </item>
</layer-list>