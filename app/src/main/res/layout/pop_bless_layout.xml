<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/four_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_bless_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_F2EEED"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/pop_bless_koulin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bin_33_dip"
            android:layout_marginBottom="@dimen/bin_10_dip"
            android:layout_marginLeft="@dimen/bin_11_dip"
            android:layout_marginRight="@dimen/bin_11_dip"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:layout_weight="1"
            android:background="@drawable/box_gray_white"
            android:hint="请输入红包口令"
            android:paddingLeft="@dimen/bin_11_dip"
            android:paddingRight="@dimen/bin_11_dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_888888"
            android:textSize="@dimen/bin_12_dip" />

        <Button
            android:id="@+id/pop_bless_submit"
            android:layout_width="@dimen/bin_50_dip"
            android:layout_height="@dimen/bin_30_dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/bin_11_dip"
            android:background="@drawable/box_blue"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/bin_12_dip" />
    </LinearLayout>


</RelativeLayout>