<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_gift_avatar"
        android:layout_width="@dimen/bin_36_dip"
        android:layout_height="@dimen/bin_36_dip"
        android:src="@drawable/head_me" />

    <TextView
        android:id="@+id/item_gift_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bin_5_dip"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/bin_9_dip" />

</LinearLayout>