<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bin_10_dip">


            <RadioGroup
                android:id="@+id/register_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_44_dip"
                android:layout_marginLeft="@dimen/bin_22_dip"
                android:layout_marginRight="@dimen/bin_22_dip"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/register_type_personal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/bin_11_dip"
                    android:text="个人"
                    android:textColor="@color/orange_FEA691"
                    android:textSize="@dimen/bin_14_dip" />

                <RadioButton
                    android:id="@+id/register_type_enterprise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/bin_11_dip"
                    android:text="企业"
                    android:textColor="@color/orange_FEA691"
                    android:textSize="@dimen/bin_14_dip" />
            </RadioGroup>

            <EditText
                android:id="@+id/register_edt_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_49_dip"
                android:layout_marginLeft="@dimen/bin_22_dip"
                android:layout_marginRight="@dimen/bin_22_dip"
                android:layout_marginTop="@dimen/bin_13_dip"
                android:background="@drawable/frame_grey"
                android:drawableLeft="@mipmap/icon_phone"
                android:drawablePadding="@dimen/bin_10_dip"
                android:hint="@string/fill_in_phone"
                android:paddingLeft="@dimen/bin_12_dip"
                android:paddingRight="@dimen/bin_12_dip"
                android:singleLine="true"
                android:textSize="@dimen/bin_15_dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_49_dip"
                android:layout_marginLeft="@dimen/bin_22_dip"
                android:layout_marginRight="@dimen/bin_22_dip"
                android:layout_marginTop="@dimen/bin_14_dip"
                android:background="@drawable/frame_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bin_12_dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_verification_code" />


                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/fill_in_code"
                    android:paddingLeft="@dimen/bin_10_dip"
                    android:paddingRight="@dimen/bin_10_dip"
                    android:singleLine="true"
                    android:textSize="@dimen/bin_15_dip" />


                <TextView
                    android:id="@+id/register_get_code"
                    android:layout_width="@dimen/bin_84_dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/frame_grey_right"
                    android:gravity="center"
                    android:text="@string/send_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/bin_12_dip" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_49_dip"
                android:layout_marginLeft="@dimen/bin_22_dip"
                android:layout_marginRight="@dimen/bin_22_dip"
                android:layout_marginTop="@dimen/bin_13_dip"
                android:background="@drawable/frame_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bin_10_dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_code" />

                <EditText
                    android:id="@+id/register_edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/fill_in_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/bin_12_dip"
                    android:paddingRight="@dimen/bin_12_dip"
                    android:singleLine="true"
                    android:textSize="@dimen/bin_15_dip" />

                <ImageView
                    android:id="@+id/register_edt_password_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/bin_10_dip"
                    android:src="@mipmap/icon_hides" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_49_dip"
                android:layout_marginLeft="@dimen/bin_22_dip"
                android:layout_marginRight="@dimen/bin_22_dip"
                android:layout_marginTop="@dimen/bin_13_dip"
                android:background="@drawable/frame_grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bin_10_dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_code" />

                <EditText
                    android:id="@+id/register_edt_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/bin_12_dip"
                    android:paddingRight="@dimen/bin_12_dip"
                    android:singleLine="true"
                    android:textSize="@dimen/bin_15_dip" />

                <ImageView
                    android:id="@+id/register_edt_password_display_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/bin_10_dip"
                    android:src="@mipmap/icon_hides" />

            </LinearLayout>


            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_43_dip"
                android:layout_marginLeft="@dimen/bin_20_dip"
                android:layout_marginRight="@dimen/bin_20_dip"
                android:layout_marginTop="@dimen/bin_20_dip"
                android:background="@drawable/frame_red"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_16_dip" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>