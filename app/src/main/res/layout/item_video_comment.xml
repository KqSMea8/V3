<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/bin_9_dip">

        <ImageView
            android:id="@+id/item_video_comm_avatar"
            android:layout_width="@dimen/bin_30_dip"
            android:layout_height="@dimen/bin_30_dip"
            android:src="@drawable/head_me" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_video_comm_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/bin_10_dip" />

            <TextView
                android:id="@+id/item_video_comm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="哈哈哈"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_12_dip" />

            <TextView
                android:id="@+id/item_video_comm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="哈哈哈"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_9_dip" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_video_comm_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_video_comm_praise_icon"
                android:layout_width="@dimen/bin_20_dip"
                android:layout_height="@dimen/bin_20_dip"
                android:src="@mipmap/icon_praise" />

            <TextView
                android:id="@+id/item_video_comm_praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/bin_9_dip" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>