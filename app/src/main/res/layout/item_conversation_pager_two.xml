<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_page_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_live" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="直播"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_page_k_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_k_song" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="K歌"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_page_small_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_home_small_program" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="小程序"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">


    </LinearLayout>

</LinearLayout>