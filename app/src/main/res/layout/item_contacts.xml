<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/bin_9_dip">


        <ImageView
            android:id="@+id/item_contacts_radio"
            android:layout_width="@dimen/bin_20_dip"
            android:layout_height="@dimen/bin_20_dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:src="@mipmap/icon_radio_normal"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_contacts_avatar"
                android:layout_width="@dimen/bin_36_dip"
                android:layout_height="@dimen/bin_36_dip"
                android:src="@drawable/head_me" />

            <ImageView
                android:id="@+id/item_contacts_enterprise"
                android:layout_width="@dimen/bin_10_dip"
                android:layout_height="@dimen/bin_10_dip"
                android:layout_alignBottom="@+id/item_contacts_avatar"
                android:layout_alignRight="@+id/item_contacts_avatar"
                android:src="@mipmap/icon_enterprise"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_contacts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/bin_11_dip"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bin_14_dip" />

                <TextView
                    android:id="@+id/item_contacts_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/bin_11_dip"
                    android:drawableLeft="@mipmap/icon_location"
                    android:drawablePadding="@dimen/bin_5_dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/bin_11_dip" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_contacts_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bin_11_dip"
                android:layout_marginRight="@dimen/bin_9_dip"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:background="@drawable/box_blue_circular"
                android:drawableLeft="@mipmap/icon_woman"
                android:drawablePadding="@dimen/bin_5_dip"
                android:gravity="center"
                android:paddingBottom="@dimen/bin_2_dip"
                android:paddingLeft="@dimen/bin_9_dip"
                android:paddingRight="@dimen/bin_9_dip"
                android:paddingTop="@dimen/bin_2_dip"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_9_dip" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>