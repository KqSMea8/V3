<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bin_6_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_13_dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_k_song_avatar"
                android:layout_width="@dimen/bin_40_dip"
                android:layout_height="@dimen/bin_40_dip"
                android:src="@drawable/head_me" />

            <TextView
                android:id="@+id/item_k_song_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/bin_11_dip"
                android:layout_weight="1"
                android:text="哈哈"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_14_dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_k_song_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/bin_12_dip" />

                <TextView
                    android:id="@+id/item_k_song_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/bin_9_dip"
                    android:text="刚"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/bin_12_dip" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/item_k_song_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bin_7_dip"
            android:layout_marginTop="@dimen/bin_7_dip"
            android:text="哈哈哈哈哈哈哈哈哈"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_12_dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_F8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_k_song_cover"
                android:layout_width="@dimen/bin_62_dip"
                android:layout_height="@dimen/bin_62_dip"
                android:src="@mipmap/icon_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bin_9_dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/bin_7_dip">

                <TextView
                    android:id="@+id/item_k_song_cover_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="啦啦啦"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/bin_12_dip" />

                <TextView
                    android:id="@+id/item_k_song_cover_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bin_4_dip"
                    android:drawableLeft="@mipmap/icon_medal"
                    android:drawablePadding="@dimen/bin_5_dip"
                    android:text="好友擂主384分"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/bin_11_dip" />

                <TextView
                    android:id="@+id/item_k_song_cover_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12人收听  2人评论"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/bin_11_dip" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/bin_9_dip"
                android:background="@drawable/box_gray_tra_circular"
                android:paddingBottom="@dimen/bin_5_dip"
                android:paddingLeft="@dimen/bin_11_dip"
                android:paddingRight="@dimen/bin_11_dip"
                android:paddingTop="@dimen/bin_5_dip"
                android:text="关注"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_12_dip"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bin_40_dip"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_k_song_gift_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_gift"
                    android:drawablePadding="@dimen/bin_9_dip"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/bin_13_dip" />

            </RelativeLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bin_10_dip"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:background="@mipmap/icon_personal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_k_song_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_comment"
                    android:drawablePadding="@dimen/bin_9_dip"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/bin_13_dip" />

            </RelativeLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bin_10_dip"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:background="@mipmap/icon_personal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_k_song_share_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_forward"
                    android:drawablePadding="@dimen/bin_9_dip"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/bin_13_dip" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bin_10_dip"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:background="@mipmap/icon_personal_line" />


            <ImageView
                android:id="@+id/item_k_song_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bin_13_dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@mipmap/icon_circle_delete" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>