<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bin_7_dip"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip"
        android:paddingTop="@dimen/bin_6_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bin_178_dip">

            <ImageView
                android:id="@+id/item_live_play_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_default" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/four_transparent" />

            <TextView
                android:id="@+id/item_live_play_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/bin_9_dip"
                android:layout_marginRight="@dimen/bin_9_dip"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />


            <TextView
                android:id="@+id/item_live_play_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/bin_9_dip"
                android:layout_marginTop="@dimen/bin_9_dip"
                android:background="@drawable/box_white_tra_circular"
                android:paddingBottom="@dimen/bin_2_dip"
                android:paddingLeft="@dimen/bin_9_dip"
                android:paddingRight="@dimen/bin_9_dip"
                android:paddingTop="@dimen/bin_2_dip"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_live_play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_7_dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_13_dip" />

        <TextView
            android:id="@+id/item_live_play_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_3_dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/bin_12_dip" />

    </LinearLayout>


</LinearLayout>