<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_comment_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/four_transparent">


    <LinearLayout
        android:layout_width="@dimen/bin_200_dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/box_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bin_11_dip">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bin_9_dip"
            android:text="提示"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_13_dip" />

        <TextView
            android:id="@+id/dialog_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:layout_marginTop="@dimen/bin_5_dip"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_12_dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/bin_9_dip"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_5_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_comment_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_13_dip" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <TextView
                android:id="@+id/dialog_comment_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_13_dip" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>