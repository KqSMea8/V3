<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/bin_9_dip"
    android:paddingTop="@dimen/bin_9_dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_175_dip">

        <ImageView
            android:id="@+id/item_k_song_h_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/bin_9_dip"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_k_song_h_avatar"
                android:layout_width="@dimen/bin_30_dip"
                android:layout_height="@dimen/bin_30_dip"
                android:src="@drawable/head_other" />

            <TextView
                android:id="@+id/item_k_song_h_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_11_dip" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_64_dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_k_song_h_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="哈哈哈哈"
                android:textColor="@color/black"
                android:textSize="@dimen/bin_14_dip" />

            <TextView
                android:id="@+id/item_k_song_h_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:drawableLeft="@mipmap/icon_small_gray_headset"
                android:drawablePadding="@dimen/bin_5_dip"
                android:text="111万"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_11_dip" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/bin_30_dip"
            android:layout_height="@dimen/bin_30_dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:background="@drawable/box_gray_circular">

            <ImageView
                android:layout_width="@dimen/bin_15_dip"
                android:layout_height="@dimen/bin_15_dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bin_10_dip"
                android:src="@mipmap/icon_sound_book_play" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>