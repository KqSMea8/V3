<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/bin_9_dip">


        <ImageView
            android:id="@+id/item_matter_voc_img"
            android:layout_width="@dimen/bin_60_dip"
            android:layout_height="@dimen/bin_60_dip"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_matter_voc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_13_dip" />

            <TextView
                android:id="@+id/item_matter_voc_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:textColor="@color/gray_99" />

            <TextView
                android:id="@+id/item_matter_voc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_10_dip" />


        </LinearLayout>


        <TextView
            android:id="@+id/item_matter_voc_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/box_blue_rectangle"
            android:paddingBottom="@dimen/bin_2_dip"
            android:paddingLeft="@dimen/bin_5_dip"
            android:paddingRight="@dimen/bin_5_dip"
            android:paddingTop="@dimen/bin_2_dip"
            android:text="使用"
            android:textColor="@color/orange_FC6C57"
            android:textSize="@dimen/bin_12_dip" />


    </LinearLayout>

</LinearLayout>