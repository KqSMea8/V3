<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bin_5_dip"
        android:paddingLeft="@dimen/bin_10_dip"
        android:paddingRight="@dimen/bin_10_dip"
        android:paddingTop="@dimen/bin_5_dip">


        <ImageView
            android:id="@+id/item_contacts_radio"
            android:layout_width="@dimen/bin_20_dip"
            android:layout_height="@dimen/bin_20_dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:src="@mipmap/icon_radio_normal"
            android:visibility="gone" />


        <com.huanglong.v3.im.view.CircleImageView
            android:id="@+id/item_group_avatar"
            android:layout_width="@dimen/bin_50_dip"
            android:layout_height="@dimen/bin_50_dip"
            android:src="@mipmap/head_group" />

        <TextView
            android:id="@+id/item_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bin_11_dip"
            android:layout_marginRight="@dimen/bin_11_dip"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_14_dip" />

    </LinearLayout>

</LinearLayout>