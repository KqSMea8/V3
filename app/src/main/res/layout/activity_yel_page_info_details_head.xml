<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/yel_page_info_dat_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_150_dip"
        android:src="@color/white" />

    <TextView
        android:id="@+id/yel_page_info_dat_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bin_6_dip"
        android:background="@color/white"
        android:drawablePadding="@dimen/bin_5_dip"
        android:drawableRight="@mipmap/common_tab_icon_next"
        android:gravity="center_vertical"
        android:minHeight="@dimen/bin_33_dip"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip"
        android:text="标题"
        android:textColor="@color/gray_33" />


    <TextView
        android:id="@+id/yel_page_info_dat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bin_6_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/bin_33_dip"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip"
        android:text="标题"
        android:textColor="@color/gray_33" />

    <TextView
        android:id="@+id/yel_page_info_dat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bin_6_dip"
        android:background="@color/white"
        android:gravity="top"
        android:minHeight="@dimen/bin_80_dip"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip"
        android:paddingTop="@dimen/bin_9_dip"
        android:text="标题"
        android:textColor="@color/gray_66" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bin_9_dip"
        android:text="评论"
        android:textColor="@color/blue_45C3FB"
        android:textSize="@dimen/bin_11_dip" />


</LinearLayout>