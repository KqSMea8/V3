<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/orange_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/recharge_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_44_dip"
        android:layout_margin="@dimen/bin_11_dip"
        android:background="@drawable/box_white"
        android:hint="请输入充值金额"
        android:inputType="number"
        android:paddingLeft="@dimen/bin_11_dip"
        android:paddingRight="@dimen/bin_11_dip"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_66"
        android:textSize="@dimen/bin_14_dip" />

    <RadioGroup
        android:id="@+id/recharge_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_44_dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/recharge_wechat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bin_20_dip"
            android:layout_weight="1"
            android:checked="true"
            android:text="微信"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_14_dip" />

        <RadioButton
            android:id="@+id/recharge_qq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="QQ"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_14_dip" />

        <RadioButton
            android:id="@+id/recharge_alipay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bin_10_dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="快捷支付"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_14_dip"
            android:visibility="visible" />


    </RadioGroup>

    <Button
        android:id="@+id/recharge_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_33_dip"
        android:layout_marginLeft="@dimen/bin_30_dip"
        android:layout_marginRight="@dimen/bin_30_dip"
        android:layout_marginTop="@dimen/bin_20_dip"
        android:background="@drawable/frame_orange"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="@dimen/bin_14_dip" />

</LinearLayout>