<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">

    <include
        layout="@layout/orange_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入反馈内容"
        android:minHeight="@dimen/bin_100_dip"
        android:padding="@dimen/bin_9_dip"
        android:textColor="@color/gray_33"
        android:textColorHint="@color/gray_99"
        android:textSize="@dimen/bin_13_dip" />

    <Button
        android:id="@+id/feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_33_dip"
        android:layout_margin="@dimen/bin_20_dip"
        android:background="@drawable/frame_orange"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/bin_13_dip" />

</LinearLayout>