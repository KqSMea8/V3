<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/bin_9_dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_yel_info_img"
                android:layout_width="@dimen/bin_50_dip"
                android:layout_height="@dimen/bin_50_dip"
                android:src="@mipmap/icon_default" />

            <ImageView
                android:layout_width="@dimen/bin_15_dip"
                android:layout_height="@dimen/bin_15_dip"
                android:layout_alignBottom="@+id/item_yel_info_img"
                android:layout_alignRight="@+id/item_yel_info_img"
                android:src="@mipmap/icon_enterprise" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bin_9_dip"
            android:layout_marginRight="@dimen/bin_9_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_yel_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_12_dip" />

            <TextView
                android:id="@+id/item_yel_info_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_12_dip"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/bin_10_dip" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_yel_info_short_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/item_yel_info_time"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/bin_10_dip" />

            <TextView
                android:id="@+id/item_yel_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/bin_10_dip" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>