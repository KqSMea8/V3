<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_DCDCDC"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/bin_12_dip">

        <RelativeLayout
            android:id="@+id/item_space_user_avatar_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_space_user_avatar"
                android:layout_width="@dimen/bin_44_dip"
                android:layout_height="@dimen/bin_44_dip"
                android:scaleType="fitXY"
                android:src="@drawable/head_me" />

            <ImageView
                android:id="@+id/item_space_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_space_user_avatar"
                android:layout_alignRight="@+id/item_space_user_avatar"
                android:src="@mipmap/icon_enterprise" />

        </RelativeLayout>


        <TextView
            android:id="@+id/item_space_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bin_10_dip"
            android:layout_marginTop="@dimen/bin_5_dip"
            android:layout_toRightOf="@+id/item_space_user_avatar_rel"
            android:text="昵称"
            android:textColor="@color/btn_blue_hover"
            android:textSize="@dimen/bin_12_dip" />

        <TextView
            android:id="@+id/item_space_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_space_user_nickname"
            android:layout_marginLeft="@dimen/bin_10_dip"
            android:layout_marginTop="@dimen/bin_2_dip"
            android:layout_toRightOf="@+id/item_space_user_avatar_rel"
            android:text="15:27"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/bin_12_dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bin_10_dip"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bin_12_dip"
        android:paddingLeft="@dimen/bin_12_dip"
        android:paddingRight="@dimen/bin_12_dip"
        android:paddingTop="@dimen/bin_5_dip">


        <TextView
            android:id="@+id/item_space_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip" />

        <!--  <TextView
              android:id="@+id/item_space_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:autoLink="all"
              android:text="标题"
              android:textColor="@color/black"
              android:textIsSelectable="true"
              android:textSize="@dimen/bin_13_dip" />-->

        <!--<TextView
            android:id="@+id/item_space_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_2_dip"
            android:text="内容"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/bin_11_dip" />-->

        <TextView
            android:id="@+id/item_space_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/bin_11_dip" />


        <ImageView
            android:id="@+id/item_space_img"
            android:layout_width="@dimen/bin_150_dip"
            android:layout_height="@dimen/bin_100_dip"
            android:layout_marginTop="@dimen/bin_5_dip"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_space_img_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_5_dip" />


        <TextView
            android:id="@+id/item_space_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_5_dip"
            android:drawableLeft="@mipmap/icon_location"
            android:drawablePadding="@dimen/bin_5_dip"
            android:gravity="center"
            android:text="浙江"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/bin_11_dip"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_11_dip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/item_space_delete"
                    android:layout_width="@dimen/bin_18_dip"
                    android:layout_height="@dimen/bin_18_dip"
                    android:src="@mipmap/icon_circle_delete" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_space_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bin_15_dip"
                    android:drawableLeft="@mipmap/icon_gift"
                    android:drawablePadding="@dimen/bin_5_dip"
                    android:text=""
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/bin_12_dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/item_space_share"
                    android:layout_width="@dimen/bin_18_dip"
                    android:layout_height="@dimen/bin_18_dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/bin_12_dip"
                    android:src="@mipmap/icon_k_share" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/item_space_more"
                    android:layout_width="@dimen/bin_18_dip"
                    android:layout_height="@dimen/bin_18_dip"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_more" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_space_zan_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_9_dip"
            android:background="@drawable/frame_grey"
            android:orientation="vertical"
            android:padding="@dimen/bin_9_dip"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/item_space_zan_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bin_9_dip"
                android:orientation="horizontal"
                android:visibility="gone">


                <com.huanglong.v3.view.LikesView
                    android:id="@+id/item_space_likeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/bin_12_dip" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_space_comment_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/bin_20_dip"
                    android:layout_height="@dimen/bin_12_dip"
                    android:layout_marginTop="@dimen/bin_2_dip"
                    android:src="@mipmap/icon_k_comment" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/item_space_comment_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bin_5_dip" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>