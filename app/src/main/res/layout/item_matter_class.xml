<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/bin_9_dip">

    <ImageView
        android:id="@+id/item_matter_class_img"
        android:layout_width="@dimen/bin_20_dip"
        android:layout_height="@dimen/bin_20_dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_default" />

    <TextView
        android:id="@+id/item_matter_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bin_5_dip"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/bin_12_dip" />


</LinearLayout>