<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/orange_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/bin_60_dip"
        android:layout_height="@dimen/bin_60_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bin_20_dip"
        android:src="@mipmap/icon_app" />

    <TextView
        android:id="@+id/about_me_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bin_9_dip"
        android:text="版本号：V1.0"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/bin_14_dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/bin_20_dip"
            android:text="北京凰龙科技有限公司"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_14_dip" />
    </RelativeLayout>

</LinearLayout>