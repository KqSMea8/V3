<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_57_dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bin_11_dip"
        android:paddingRight="@dimen/bin_11_dip">

        <ImageView
            android:id="@+id/item_bless_user_avatar"
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/head_me" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bin_11_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_bless_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡歌"
                android:textColor="@color/black"
                android:textSize="@dimen/bin_13_dip" />

            <TextView
                android:id="@+id/item_bless_user_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_6_dip"
                android:text="胡歌"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_12_dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_bless_user_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bin_11_dip"
            android:layout_marginTop="@dimen/bin_11_dip"
            android:text="88.88"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip" />

    </LinearLayout>


</LinearLayout>