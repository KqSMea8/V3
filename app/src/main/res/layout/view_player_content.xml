<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/player_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/player_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <ImageView
        android:id="@+id/player_cloud_ing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_video_ing" />

    <!--<TextView-->
    <!--android:layout_marginLeft="16dp"-->
    <!--android:layout_marginTop="15dp"-->
    <!--android:id="@+id/player_tv_back"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:background="?attr/selectableItemBackgroundBorderless"-->
    <!--android:clickable="true"-->
    <!--android:drawableLeft="@drawable/btn_back_gray"-->
    <!--android:drawablePadding="5dp"-->
    <!--android:drawableStart="@drawable/btn_back_gray"-->
    <!--android:textColor="@color/colorTransparentGray"-->
    <!--/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bin_40_dip"
        android:layout_marginLeft="@dimen/bin_9_dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_video_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_white_location"
            android:drawablePadding="@dimen/bin_5_dip"
            android:maxWidth="@dimen/bin_200_dip"
            android:text="哈哈哈哈"
            android:textColor="@color/white"
            android:textSize="@dimen/bin_9_dip" />

        <TextView
            android:id="@+id/item_video_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:maxWidth="@dimen/bin_200_dip"
            android:text="哈哈哈哈"
            android:textColor="@color/white"
            android:textSize="@dimen/bin_13_dip" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/bin_40_dip"
        android:layout_marginRight="@dimen/bin_9_dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/player_civ_avatar"
            android:layout_width="@dimen/bin_40_dip"
            android:layout_height="@dimen/bin_40_dip"
            android:src="@drawable/head_me" />

        <LinearLayout
            android:id="@+id/item_video_follow_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_video_follow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_video_follow" />

            <TextView
                android:id="@+id/item_video_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_video_praise_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_video_praise_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_video_praise" />

            <TextView
                android:id="@+id/item_video_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_video_comment_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_video_comment" />

            <TextView
                android:id="@+id/item_video_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_video_gift_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_10_dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_video_gift" />

            <TextView
                android:id="@+id/item_video_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_video_share_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:src="@mipmap/icon_video_share" />

            <TextView
                android:id="@+id/item_video_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_5_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/bin_12_dip" />

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/item_video_pause"
        android:layout_width="@dimen/bin_50_dip"
        android:layout_height="@dimen/bin_50_dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_video_pause"
        android:visibility="gone" />


</RelativeLayout>