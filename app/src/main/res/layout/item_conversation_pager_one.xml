<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/msg_social_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_social_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="社圈"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_page_yellow_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_yellow_page" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="黄页"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_blessing_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_blessing_package" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="福包"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="视频"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_page_v_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/bin_13_dip">

        <ImageView
            android:layout_width="@dimen/bin_36_dip"
            android:layout_height="@dimen/bin_36_dip"
            android:src="@mipmap/icon_vf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bin_8_dip"
            android:text="音频"
            android:textColor="@color/black"
            android:textSize="@dimen/bin_13_dip" />

    </LinearLayout>


</LinearLayout>