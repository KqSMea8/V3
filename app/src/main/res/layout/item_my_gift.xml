<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_F5F5F5"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bin_10_dip"
        android:paddingLeft="@dimen/bin_11_dip"
        android:paddingRight="@dimen/bin_11_dip"
        android:paddingTop="@dimen/bin_10_dip">

        <ImageView
            android:id="@+id/item_my_gift_avatar"
            android:layout_width="@dimen/bin_40_dip"
            android:layout_height="@dimen/bin_40_dip"
            android:src="@drawable/head_me" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bin_11_dip"
            android:layout_marginRight="@dimen/bin_11_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_my_gift_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户昵称"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_13_dip" />

            <TextView
                android:id="@+id/item_my_gift_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:text="2018-18-18"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_11_dip" />


        </LinearLayout>

        <ImageView
            android:id="@+id/item_my_gift_cover"
            android:layout_width="@dimen/bin_40_dip"
            android:layout_height="@dimen/bin_40_dip"
            android:src="@mipmap/icon_default" />


    </LinearLayout>


</LinearLayout>