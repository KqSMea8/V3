<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">

    <include
        layout="@layout/orange_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/voc_add_class_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_180_dip"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_live_default" />

    <EditText
        android:id="@+id/voc_add_class_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bin_9_dip"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入标题"
        android:minHeight="@dimen/bin_33_dip"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip"
        android:paddingTop="@dimen/bin_6_dip"
        android:textColor="@color/gray_33"
        android:textColorHint="@color/gray_99"
        android:textSize="@dimen/bin_13_dip" />


    <LinearLayout
        android:id="@+id/voc_add_class_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_33_dip"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bin_9_dip"
        android:paddingRight="@dimen/bin_9_dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_13_dip" />

        <TextView
            android:id="@+id/voc_add_class_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/bin_13_dip" />

        <ImageView style="@style/right_arrow" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bin_9_dip"
        android:layout_marginTop="@dimen/bin_9_dip"
        android:text="提示：例如一本故事书的第几章的名称"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/bin_13_dip" />


    <Button
        android:id="@+id/voc_add_class_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bin_33_dip"
        android:layout_marginLeft="@dimen/bin_20_dip"
        android:layout_marginRight="@dimen/bin_20_dip"
        android:layout_marginTop="@dimen/bin_9_dip"
        android:background="@drawable/frame_orange"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/bin_12_dip" />


</LinearLayout>