<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    android:paddingBottom="0.5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bin_10_dip"
        android:paddingLeft="@dimen/bin_11_dip"
        android:paddingRight="@dimen/bin_11_dip"
        android:paddingTop="@dimen/bin_10_dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_bless_packet_avatar"
                android:layout_width="@dimen/bin_40_dip"
                android:layout_height="@dimen/bin_40_dip"
                android:src="@drawable/head_me" />

            <ImageView
                android:id="@+id/item_bless_packet_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_bless_packet_avatar"
                android:layout_alignRight="@+id/item_bless_packet_avatar"
                android:src="@mipmap/icon_enterprise" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bin_10_dip"
            android:layout_marginRight="@dimen/bin_8_dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_bless_packet_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/bin_12_dip" />

            <TextView
                android:id="@+id/item_bless_packet_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bin_11_dip"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/bin_11_dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_bless_packet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/bin_12_dip" />

            <TextView
                android:id="@+id/item_bless_packet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/bin_10_dip"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/bin_9_dip" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>